dependency "dcore:seq" version="*"
dependency "dcore:sleep" version="*"
dependency "dcore:su" version="*"
dependency "dcore:factor" version="*"

// Utility libraries
subPackage {
    name "shadow"
    targetName "shadow"
    targetType "library"
    sourcePaths "src/shadow"
}

// WIP
