subPackage {
    name "su"
    targetName "su"
    targetPath "out/"
    targetType "executable"
    sourcePaths "src/su"
    libs "crypt"
    configuration "application" {
        platforms "linux"
        versions "USE_SHADOW"
        sourcePaths "src/shadow"
    }
    configuration "application" {
        platforms "posix"
    }
    configuration "force_shadow" {
        versions "USE_SHADOW"
        sourcePaths "src/shadow"
    }
}




